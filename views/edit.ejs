    </tr>
    </div>
    <tr>
      <td>
        <input class="form-control input-lg" type="text"  name="dataIncimit" placeholder="03.03.2018" value="<%= doc.dataInicimit %>" required>
      </td>
      <td>
            <input class="form-control input-lg" type="text"   name="DataPublikimit" placeholder="03.03.2018" value="<%= doc.DataPublikimit %>" required>
